---
extends: default
rules:
  document-start:
    present: true
  trailing-spaces: enable
  new-lines:
    type: unix
  indentation:
    spaces: 2
  comments:
    require-starting-space: true
    ignore-shebangs: true
    min-spaces-from-content: 2
  line-length:
    max: 120
  colons:
    max-spaces-before: 0
    max-spaces-after: 1
  commas:
    max-spaces-before: 0
    min-spaces-after: 1
    max-spaces-after: 1
  comments-indentation: {}
  empty-lines:
    max: 1
    max-start: 0
    max-end: 1
  hyphens:
    max-spaces-after: 1
  key-duplicates: {}
